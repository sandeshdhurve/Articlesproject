<h1><%if user_signed_in?%></h1>

<table class="table table-condensed">
  <thead> 
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
      <tr>
        <td><%= current_user.name %></td>
        <td><%= current_user.email %></td>
        <td><%= link_to 'Show', current_user, :class => "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_user_registration_path(current_user), :class => "btn btn-warning btn-sm" %></td>
      </tr>
    
  </tbody>
</table>

<p><%= link_to 'Sign out', destroy_user_session_path, method: :delete, :class => "btn btn-danger btn-sm"%></p>
<%else%>
You are not Signed in
<p><%=link_to "Sign in", new_user_session_path, :class => "btn btn-info btn-sm"%></p>
<%end%>